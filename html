    <script>
        document.addEventListener('DOMContentLoaded', () => {

            // Mobile menu toggle
            const mobileMenuButton = document.getElementById('mobile-menu-button');
            const mobileMenu = document.getElementById('mobile-menu');
            mobileMenuButton.addEventListener('click', () => {
                mobileMenu.classList.toggle('hidden');
            });

            // Data for projects and skills
            const projectData = {
                quantium: {
                    title: "Data Analytics Job Simulation (Quantium)",
                    description: "Analyzed client transaction and lifestyle data to identify customer purchasing behaviors. The project involved data preparation, developing metrics, and conducting uplift testing to assess the impact of a retail trial, providing actionable insights into consumer trends.",
                    technologies: ["Advanced Excel", "VBA", "Macros", "Power BI"],
                    impact: {
                        labels: ["Manual Process", "Automated Process"],
                        data: [8, 2],
                        saved: 6
                    }
                },
                deloitte: {
                    title: "Data Analytics Job Simulation (Deloitte)",
                    description: "Tasked with analyzing time utilization and productivity datasets. The project required creating comprehensive dashboards in Tableau and conducting forensic analysis to highlight key trends, anomalies, and provide a clear, insightful understanding of the situation.",
                    technologies: ["Advanced Excel", "Macros", "Tableau"],
                    impact: {
                        labels: ["Manual Reporting", "Dashboard Reporting"],
                        data: [6, 2],
                        saved: 4
                    }
                }
            };
            
            const skillsData = {
                all: [
                    { skill: 'Power BI', level: 90, category: 'bi' },
                    { skill: 'Advanced Excel', level: 95, category: 'data' },
                    { skill: 'VBA Macros', level: 85, category: 'automation' },
                    { skill: 'SQL Server', level: 80, category: 'data' },
                    { skill: 'Tableau', level: 70, category: 'bi' },
                    { skill: 'DAX Functions', level: 80, category: 'data' },
                    { skill: 'Python (Basic)', level: 60, category: 'automation' },
                    { skill: 'SAP FICO', level: 75, category: 'other' },
                    { skill: 'MS Access', level: 75, category: 'data' },
                    { skill: 'Tally ERP', level: 80, category: 'other' },
                ],
                bi: [
                    { skill: 'Power BI', level: 90 },
                    { skill: 'Tableau', level: 70 },
                    { skill: 'Power-View', level: 85 },
                    { skill: 'Power-Map', level: 80 },
                ],
                automation: [
                    { skill: 'VBA Macros', level: 85 },
                    { skill: 'Python (Basic)', level: 60 },
                    { skill: 'Report Scheduling', level: 90 },
                ],
                data: [
                    { skill: 'Advanced Excel', level: 95 },
                    { skill: 'SQL Server', level: 80 },
                    { skill: 'DAX Functions', level: 80 },
                    { skill: 'MS Access', level: 75 },
                    { skill: 'MySQL', level: 70 },
                ],
                other: [
                    { skill: 'SAP FICO', level: 75 },
                    { skill: 'Tally ERP', level: 80 },
                    { skill: 'MS PowerPoint', level: 90 },
                ]
            };

            // Chart instances
            let projectChart, skillsChart;

            // Project section logic
            const projectTabs = document.querySelectorAll('.project-tab');
            const projectTitleEl = document.getElementById('project-title');
            const projectDescEl = document.getElementById('project-description');
            const projectTechEl = document.getElementById('project-tech');

            function updateProject(projectName) {
                const data = projectData[projectName];
                projectTitleEl.textContent = data.title;
                projectDescEl.textContent = data.description;
                projectTechEl.innerHTML = data.technologies.map(tech => 
                    `<span class="bg-gray-200 text-gray-700 text-xs font-medium px-2.5 py-1 rounded-full">${tech}</span>`
                ).join('');

                if (projectChart) projectChart.destroy();
                const ctx = document.getElementById('project-chart').getContext('2d');
                projectChart = new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: data.impact.labels,
                        datasets: [{
                            label: 'Hours to Complete',
                            data: data.impact.data,
                            backgroundColor: ['#e07a5f', '#81b29a'],
                            borderColor: ['#e07a5f', '#81b29a'],
                            borderWidth: 1,
                            borderRadius: 4,
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: { display: false },
                            title: {
                                display: true,
                                text: `Impact: ${data.impact.saved} Hours Saved`,
                                font: { size: 16, weight: 'bold' },
                                color: '#3d405b'
                            }
                        },
                        scales: {
                            y: {
                                beginAtZero: true,
                                title: { display: true, text: 'Hours' }
                            }
                        }
                    }
                });
            }

            projectTabs.forEach(tab => {
                tab.addEventListener('click', () => {
                    projectTabs.forEach(t => t.classList.remove('active'));
                    tab.classList.add('active');
                    updateProject(tab.dataset.project);
                });
            });

            // Skills section logic
            const skillBtns = document.querySelectorAll('.skill-btn');
            function updateSkillsChart(category) {
                const data = skillsData[category];
                const labels = data.map(s => s.skill);
                const levels = data.map(s => s.level);
                
                if (skillsChart) skillsChart.destroy();
                const ctx = document.getElementById('skills-chart').getContext('2d');
                skillsChart = new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: labels,
                        datasets: [{
                            label: 'Proficiency',
                            data: levels,
                            backgroundColor: '#81b29a',
                            borderColor: '#81b29a',
                            borderWidth: 1,
                            borderRadius: 4,
                        }]
                    },
                    options: {
                        indexAxis: 'y',
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: { display: false },
                            tooltip: {
                                callbacks: {
                                    label: (context) => `${context.dataset.label}: ${context.raw}%`
                                }
                            }
                        },
                        scales: {
                            x: {
                                beginAtZero: true,
                                max: 100,
                                ticks: {
                                    callback: (value) => `${value}%`
                                }
                            }
                        }
                    }
                });
            }

            skillBtns.forEach(btn => {
                btn.addEventListener('click', () => {
                    skillBtns.forEach(b => b.classList.remove('active'));
                    btn.classList.add('active');
                    updateSkillsChart(btn.dataset.category);
                });
            });

            // Initial calls
            updateProject('quantium');
            updateSkillsChart('all');


            // Smooth scrolling and active nav link highlighting
            const sections = document.querySelectorAll('section');
            const navLinks = document.querySelectorAll('.nav-link');

            window.addEventListener('scroll', () => {
                let current = '';
                sections.forEach(section => {
                    const sectionTop = section.offsetTop;
                    if (pageYOffset >= sectionTop - 100) {
                        current = section.getAttribute('id');
                    }
                });
                
                navLinks.forEach(link => {
                    link.classList.remove('active');
                    if (link.getAttribute('href').includes(current)) {
                        link.classList.add('active');
                    }
                });
            });
            
            // Fade-in sections on scroll
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('visible');
                    }
                });
            }, { threshold: 0.1 });

            document.querySelectorAll('.section-fade-in').forEach(section => {
                observer.observe(section);
            });
        });
    </script>

</body>
</html>
